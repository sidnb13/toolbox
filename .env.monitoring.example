# Monitor Service Configuration
# ============================
MONITOR_HOST=0.0.0.0          # Interface to bind the monitoring service to
MONITOR_PORT=8001             # Port for the monitor service
LOG_LEVEL=INFO                # Logging level (DEBUG, INFO, WARNING, ERROR)

# Database Configuration
# ============================
DB_HOST=db                    # PostgreSQL host
DB_PORT=5432                  # PostgreSQL port
DB_NAME=gpumonitor            # Database name
DB_USER=user                  # Database username
DB_PASSWORD=pass              # Database password

# Redis Configuration
# ============================
REDIS_HOST=redis              # Redis host
REDIS_PORT=6379               # Redis port

# Authentication
# ============================
AUTH_SECRET_KEY=              # Secret key for JWT token generation
AUTH_ALGORITHM=HS256          # Algorithm for JWT
AUTH_TOKEN_EXPIRE_MINUTES=30  # Token expiration time

# Agent Configuration
# ============================
AGENT_HOST=0.0.0.0            # Interface to bind the agent service to
AGENT_PORT=8000               # Port for the agent service
AGENT_NAME=default_agent      # Name to identify this agent
AGENT_LOCATION=local          # Location identifier
CLUSTER_NAME=default_cluster  # Cluster name for grouping agents
POLLING_INTERVAL_SECONDS=5    # How often agent checks GPU status
GPU_MEMORY_THRESHOLD=90       # Memory threshold percentage for alerts

# Notification Settings
# ============================
SLACK_WEBHOOK_URL=            # Webhook URL for Slack notifications
DISCORD_WEBHOOK_URL=          # Webhook URL for Discord notifications
NOTIFICATION_THRESHOLD_UTIL=80 # GPU utilization threshold for notifications
NOTIFICATION_COOLDOWN_MINUTES=15 # Cooldown between notifications

# Backend Configuration
# ============================
LAMBDA_API_KEY=               # API key for Lambda Labs integration

# Monitor URL (for agent)
# ============================
MONITOR_URL=http://monitor:8001 # URL where monitor service is available