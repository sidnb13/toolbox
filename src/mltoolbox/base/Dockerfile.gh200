FROM nvcr.io/nvidia/pytorch:24.02-py3

ARG PYTHON_VERSION=3.10.12

# Combine environment variable settings
ENV TZ=Etc/UTC \
    PATH="/usr/local/bin:${PATH}" \
    PYTHONBREAKPOINT=IPython.terminal.debugger.set_trace

WORKDIR /workspace

# Add ARM64 architecture and repositories
RUN apt-get update && dpkg --add-architecture arm64

# Install all packages in one go
RUN apt-get install -y --no-install-recommends \
        curl \
        git \
        openssh-client \
        sudo \
        wget \
        nvtop \
        nano \
        vim \
        zsh \
        net-tools \
        unzip \
        software-properties-common && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Setup ZSH separately
RUN wget -O /tmp/zsh-in-docker.sh https://github.com/deluan/zsh-in-docker/releases/download/v1.1.5/zsh-in-docker.sh && \
    chmod +x /tmp/zsh-in-docker.sh && \
    /tmp/zsh-in-docker.sh -t robbyrussell -p git && \
    rm /tmp/zsh-in-docker.sh

# Configure shell and git
RUN chsh -s $(which zsh) && \
    echo "set -o vi" >> /root/.zshrc && \
    git config --global core.editor vi

# Install uv
RUN curl -LsSf https://astral.sh/uv/install.sh | sh && \
    # Make uv available in PATH for all users
    ln -sf /root/.local/bin/uv /usr/local/bin/uv

# Install Node.js 20 (required for Claude Code)
RUN apt-get update && apt-get install -y \
    curl \
    && curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code
RUN curl -fsSL https://claude.ai/install.sh | bash

# Configure Python to prioritize system packages over current directory
# This prevents local directories from shadowing installed packages
# We create sitecustomize.py in site-packages which runs during site initialization
RUN python3 -c "import site; import sys; \
    import pathlib; \
    site_packages = [p for p in sys.path if 'site-packages' in p or 'dist-packages' in p][0]; \
    sitecustomize = pathlib.Path(site_packages) / 'sitecustomize.py'; \
    sitecustomize.write_text('''import sys\nimport os\nfrom pathlib import Path\n\n# Move current directory to end of sys.path to prioritize installed packages\n# This prevents local directories (e.g., numpy/) from shadowing installed packages\ncwd = Path.cwd().resolve()\ncwd_str = str(cwd)\ncwd_relative = '.'\n# Remove both absolute and relative current directory from sys.path\nwhile cwd_str in sys.path:\n    sys.path.remove(cwd_str)\nwhile cwd_relative in sys.path:\n    sys.path.remove(cwd_relative)\n# Add current directory at the end (lowest priority)\nsys.path.append(cwd_str)\n''')"