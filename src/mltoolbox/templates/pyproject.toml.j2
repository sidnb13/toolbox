[project]
name = "{{ project_name }}"
version = "{{ version | default('0.1.0') }}"
description = "{{ description | default('ML Project') }}"
readme = "README.md"
requires-python = ">={{ python_version | default('3.9') }}"
dependencies = [
    "click>=8.0.0",
    "python-dotenv>=0.19.0",
    "jinja2>=3.1.0",
    "sqlalchemy>=2.0.0",
    "tomli>=2.0.0",
    "setuptools==68.2.2",
    "paramiko==3.5.0",
    "openai>=1.0.0",
    "transformers>=4.30.0",
    "datasets>=2.14.0",
    "wandb>=0.16.0",
    "hydra-core>=1.3.0",
    "omegaconf>=2.3.0",
    "tqdm>=4.65.0",
    "matplotlib>=3.8.0",
    "seaborn>=0.13.0",
    "numpy>=1.24.0",
    "pandas>=2.0.0",
    "scikit-learn>=1.3.0",
    "pyyaml>=6.0.0",
    "accelerate>=0.20.0",
    "blobfile>=2.0.0",
    "lxml>=4.9.0",
    "pycryptodomex>=3.18.0",
    "tiktoken>=0.5.0",
    "pyvene>=0.1.0",
    "hydra-colorlog>=1.0.0",
    "hydra-joblib-launcher>=1.2.0",
    "hydra-submitit-launcher>=1.2.0",
    "torch>=2.0.0",
    "torchvision>=0.15.0",
]

[project.optional-dependencies]
dev = [
    "ipykernel>=6.25.0",
    "jupyter>=1.0.0",
    "pre-commit>=3.0.0",
    "ipdb>=0.13.0",
]
ray = [
    "ray[default]>=2.44.0",
    "hydra-ray-jobs-launcher @ git+https://github.com/sidnb13/hydra#egg=hydra-ray-jobs-launcher&subdirectory=plugins/hydra_ray_jobs_launcher",
]

[project.scripts]
{{ project_name }} = "{{ project_name }}.cli:cli"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.metadata]
allow-direct-references = true

[tool.hatch.build.targets.wheel]
packages = ["src/{{ project_name }}"] 